<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreationNouveauMdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="65px"
            android:text="Création du nouveau mot de passe"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginBottom="80px"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:text="Code reçu par e-mail :"
            android:textColor="#000000"/>


        <EditText
            android:id="@+id/edCodeConfirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:textColorHint="#000000"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:padding="8dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:text="Nouveau mot de passe :"
            android:textColor="#000000"/>


        <EditText
            android:id="@+id/edNouveauMdp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:textColorHint="#000000"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:padding="8dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:text="Nouveau mot de passe :"
            android:textColor="#000000"/>


        <EditText
            android:id="@+id/edNouveauMdp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:textColorHint="#000000"
            android:layout_marginBottom="30dp"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:padding="20dp"
            android:text="ANNULER"
            android:textColor="#FFFF"
            android:textSize="50px" />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="ENVOYER"
            android:textColor="#FFFF"
            android:textSize="50px"
            android:padding="20dp"
            android:layout_marginLeft="40px"/>


    </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>